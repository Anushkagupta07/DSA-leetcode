class Solution {
public:
    int maxArea(vector<int>& height) { //o(n)
        int maxWater = 0; //ans
        int lp = 0;
        int rp = height.size()-1;
        while(lp<rp){
            int w = rp-lp;
            int ht = min(height[lp],height[rp]);
            int currWater = w*ht;
            maxWater  = max(currWater,maxWater);
            if(height[lp] < height[rp]){
                lp++;
            }else{
                rp--;
            }
        }
        return maxWater;
    }
};
