    // for(int i=1;i<n;i++){
    //     lmax[i] = max(lmax[i-1],height[i]);
    // }
    // for(int i=n-2;i>=0;i--){
    //     rmax[i] = max(rmax[i+1], height[i]);
    // }
    // for(int i=0;i<n;i++){
    //     water+= min(lmax[i] , rmax[i]) - height[i];
    // }
    // return water;





// BRUTE FORCE APPROACH - O(n*2)
    // int n = nums.size();
    // int total = 0;
    // for(int i=0;i<n;i++){
    //     int max_left = 0;
